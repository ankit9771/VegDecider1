<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eea1">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:id="@+id/veg_icon"
            android:background="@drawable/veg_image"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:text=""
            android:layout_below="@id/veg_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:textSize="36sp"
            android:textColor="#3e3"
            android:id="@+id/veg_nam"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/veg_nam"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="25dp"
            android:id="@+id/add_bar"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/add_bar"
            android:layout_marginLeft="25dp"
            android:text="ADD"
            android:id="@+id/button_add"
            android:hint="Enter!"
            android:background="@color/colorPrimary"/>

         <Button
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_below="@id/button_add"
             android:layout_marginTop="100dp"
             android:layout_marginBottom="2dp"
             android:text="Decide"
             android:background="#2f6"
             android:id="@+id/decider_veg"/>
    </RelativeLayout>


</LinearLayout>